# Dump file hashes (useful for differential analysis)

. lib/misc/stdio
. lib/misc/file

file_hash_init () {
	stdio_message_log "file_hash" "Starting at: `date`"
}

file_hash_main () {
	file_list_by_perm "^-........." | while read filename
	do
		file_md5sum "${filename}" | while read md5hash
		do
			stdio_message_log "file_hash" "${filename} has hash ${md5hash}"
		done
	done
}

file_hash_fini () {
	stdio_message_log "file_hash" "Ending at: `date`"
}
